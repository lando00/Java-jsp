<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>EmployerController</servlet-name>
        <servlet-class>com.controller.EmployerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifierEmployeur</servlet-name>
        <servlet-class>com.controller.ModifierEmployeur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LieuController</servlet-name>
        <servlet-class>com.controller.LieuControlller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateLieu</servlet-name>
        <servlet-class>com.controller.UpdateLieu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>com.controller.InitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteLieu</servlet-name>
        <servlet-class>com.controller.DeleteLieu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AffecterController</servlet-name>
        <servlet-class>com.controller.AffecterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAffecter</servlet-name>
        <servlet-class>com.controller.UpdateAffecter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteAffecter</servlet-name>
        <servlet-class>com.controller.DeleteAffecter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployerController</servlet-name>
        <url-pattern>/EmployerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifierEmployeur</servlet-name>
        <url-pattern>/ModifierEmployeur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LieuController</servlet-name>
        <url-pattern>/LieuController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateLieu</servlet-name>
        <url-pattern>/UpdateLieu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitServlet</servlet-name>
        <url-pattern>/InitServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteLieu</servlet-name>
        <url-pattern>/DeleteLieu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AffecterController</servlet-name>
        <url-pattern>/AffecterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAffecter</servlet-name>
        <url-pattern>/UpdateAffecter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteAffecter</servlet-name>
        <url-pattern>/DeleteAffecter</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>EmployerController</welcome-file>
        <welcome-file>LieuController</welcome-file>
    </welcome-file-list>
</web-app>
